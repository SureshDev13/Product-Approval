<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Ten_Digit_Mobile_Number</fullName>
    <active>false</active>
    <errorConditionFormula>OR(LEN(   Phone   ) &lt;&gt; 10, NOT(ISNUMBER(  Phone  )))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Enter the Ten Digit Number</errorMessage>
</ValidationRule>
